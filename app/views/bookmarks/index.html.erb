<h2>My Blocmarks</h2>
<div class="row">
  <% @bookmarks_topics.each do |topic, bookmarks| %>
      <div class="row"><h4><%= link_to "\##{topic.title}", topic %></h4></div>
      <div class = "row">
      <%  bookmarks.each do |bmark| %>
        <div class = "col-md-3">
          <p class="bg-info"><%= link_to bmark.url, bmark %></p>
          <div class = "row row-remove">
            <%= link_to "Remove", bmark, method: :delete, data: {confirm: 'Are you sure you want to delete this Bookmark!?'}, class: 'btn btn-info' %>
          </div>
        </div>
      <% end %>
      </div>
  <% end %>
</div>

<div class= "row">
  <h2 class="liked">Liked Blocmarks</h2>
</div>
<div class = "row">
  <% @likes.each do |like| %>
    <% @bookmarks.each do |bookmark| %>
        <% if like.bookmark_id == bookmark.id %>
        <div class = "col-md-3">
          <p class="bg-info"><%= link_to bookmark.url, bookmark %></p>
          <div class="row">
            <%= render partial: 'likes/like', locals: {bookmark: bookmark } %>
          </div>
          </div>
    <% end %>      
    <% end %>
<% end %>
</div>

