<h2>Blocmark</h2>

<div class = "row myurl">
  <%= @bookmark.url %>
</div>

<div class="row">
  <%= render partial: 'likes/like', locals: {bookmark:@bookmark } %>
</div>

<% if policy(@bookmark).edit? %>
  <div class = "row edit-bookmark">
    <%= link_to "Edit Bookmark", edit_bookmark_path(@bookmark), class: 'btn btn-warning' %>
  </div>
  <div class = "row">
    <%= link_to "Delete Bookmark", @bookmark, method: :delete, data: {confirm: 'Are you sure you want to delete this Bookmark!?'}, class: 'btn btn-danger' %>
  </div>
<% end %>
